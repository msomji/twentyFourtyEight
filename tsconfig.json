{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2017", "es2019", "esnext", "es2016", "es2018", "es2020"]
    },
    "include": [
        "./src/**/*"
    ]
}
